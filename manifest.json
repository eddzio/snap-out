{
  "manifest_version": 3,
  "name": "Snap Out",
  "version": "1.0.0",
  "description": "Reminds you to stop scrolling LinkedIn and Facebook after a configurable time limit.",
  "permissions": ["storage", "tabs", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css"],
      "matches": ["*://*.linkedin.com/*", "*://*.facebook.com/*"]
    }
  ]
}
